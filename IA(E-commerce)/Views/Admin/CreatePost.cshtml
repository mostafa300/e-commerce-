@model IA_E_commerce_.ModelView.AdminCreatePost
@{
    ViewBag.Title = "createPost";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="m-portlet m-portlet--tab container" style="margin: 20px;border-radius: 11px;width: 97%;">
    <h2 style="text-align: center;padding-top: 32px;font-weight: 500;">Add New Project</h2>

    @using (Html.BeginForm("createPostAction", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", @class = "m-form m-form--fit m-form--label-align-right" }))
    {

        <div class="m-portlet__body">

            <div class="form-group m-form__group">


                @Html.Label("Title", new { @class = "exampleInputPassword1" })

                @Html.TextBoxFor(x => x.pst.Title, new { @class = "form-control m-input m-input--air" })
                @Html.ValidationMessageFor(model => model.pst.Title)


            </div>
            <div class="form-group m-form__group">
                @Html.Label("Description", new { @class = "exampleTextarea" })

                @Html.TextAreaFor(m => m.pst.Description, 5, 75, new { @class = "form-control m-input m-input--air m-input--pill" })
                @Html.ValidationMessageFor(model => model.pst.Description)

            </div>
            <div class="form-group m-form__group">
                @Html.Label("Customer", new { @class = "exampleTextarea" })

                @Html.DropDownListFor(m => m.pst.Relationid, new SelectList(Model.Customer, "Id", "firstName"), "Select Customer", new { @class = "cssstyle" })
                @Html.ValidationMessageFor(model => model.Customer)

            </div>
            <div class="form-group m-form__group">

                @Html.Label("Images", new { @class = "exampleInputEmail1" })

                <div></div>

                <div class="custom-file">

                    <input type="file" class="custom-file-input" id="customFile" name="image1" multiple />
                    <label class="custom-file-label" for="customFile">
                        Choose file
                    </label>
                </div>
            </div>
        </div>
        <div class="m-portlet__foot m-portlet__foot--fit">
            <div class="m-form__actions">

                <input type="submit" class="btn btn-primary" value="Create" />

                <button type="reset" class="btn btn-secondary">
                    Cancel
                </button>
            </div>
        </div>

    }
</div>


