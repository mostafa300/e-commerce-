@model  IA_E_commerce_.ModelView.MDPost
@{
        ViewBag.Title = "ControlProjects";
        Layout = "~/Views/Shared/_MDLayout.cshtml";
}


<div class="m-grid__item m-grid__item--fluid m-wrapper">



    <div class="m-content">

        <div class="m-portlet m-portlet--mobile">

            <div class="m-portlet__body">

                <div class="m-form m-form--label-align-right m--margin-top-20 m--margin-bottom-30">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="form-group m-form__group row align-items-center">
                                <div class="col-md-4">
                                    <div class="m-form__group m-form__group--inline">
                                        <div class="m-form__label">
                                            <label>
                                                Status:
                                            </label>
                                        </div>
                                        <div class="m-form__control">
                                            <select class="form-control m-bootstrap-select" id="m_form_status">
                                                <option value="">
                                                    All
                                                </option>
                                                <option value="1">
                                                    Pending
                                                </option>
                                                <option value="2">
                                                    Delivered
                                                </option>
                                                <option value="3">
                                                    Canceled
                                                </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="d-md-none m--margin-bottom-10"></div>
                                </div>
                                <div class="col-md-4">
                                    <div class="m-form__group m-form__group--inline">
                                        <div class="m-form__label">
                                            <label class="m-label m-label--single">
                                                Type:
                                            </label>
                                        </div>
                                        <div class="m-form__control">
                                            <select class="form-control m-bootstrap-select" id="m_form_type">
                                                <option value="">
                                                    All
                                                </option>
                                                <option value="1">
                                                    Online
                                                </option>
                                                <option value="2">
                                                    Retail
                                                </option>
                                                <option value="3">
                                                    Direct
                                                </option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="d-md-none m--margin-bottom-10"></div>
                                </div>
                                <div class="col-md-4">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m-input--solid" placeholder="Search..." id="generalSearch">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
                                            <span>
                                                <i class="la la-search"></i>
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-4 order-1 order-xl-2 m--align-right">
                            <a href="/MD/Index" class="btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill">
                                <span>
                                    <i class="la la-cart-plus"></i>
                                    <span>
                                        Assign new project
                                    </span>
                                </span>
                            </a>
                            <div class="m-separator m-separator--dashed d-xl-none"></div>
                        </div>
                    </div>
                </div>


                <div class="m_datatable m-datatable m-datatable--default m-datatable--loaded" id="local_data" style="">
                    <table class="m-datatable__table" style="display: block; min-height: 300px; overflow-x: auto;">
                        <thead class="m-datatable__head">
                            <tr class="m-datatable__row" style="left: 0px;">
                                <th data-field="RecordID" class="m-datatable__cell--center m-datatable__cell m-datatable__cell--check">
                                    <span style="width: 50px;">
                                        <label class="m-checkbox m-checkbox--single m-checkbox--all m-checkbox--solid m-checkbox--brand">
                                            <input type="checkbox">
                                            <span></span>
                                        </label>
                                    </span>
                                </th>
                                <th data-field="OrderID" class="m-datatable__cell m-datatable__cell--sort">
                                    <span style="width: 110px;">Name</span>
                                </th>
                                
                                <th data-field="Currency" class="m-datatable__cell m-datatable__cell--sort">
                                    <span style="width: 100px;">Deliverd</span>
                                </th>
                                <th data-field="ShipAddress" class="m-datatable__cell m-datatable__cell--sort">
                                    <span style="width: 110px;">price</span>
                                </th>
                                <th data-field="ShipAddress" class="m-datatable__cell m-datatable__cell--sort">
                                    <span style="width: 110px;">Remove Member</span>
                                </th>
                                <th data-field="ShipDate" class="m-datatable__cell m-datatable__cell--sort">
                                    <span style="width: 215px;">Control</span>
                                </th>

                            </tr>
                        </thead>
                        @foreach (var item in Model.pst)
                        {
                            <tbody class="m-datatable__body" style="">

                                <tr data-row="0" class="m-datatable__row" style="left: 0px;">
                                    <td class="m-datatable__cell--center m-datatable__cell m-datatable__cell--check" data-field="RecordID">
                                        <span style="width: 50px;">
                                            <label class="m-checkbox m-checkbox--single m-checkbox--solid m-checkbox--brand">
                                                <input type="checkbox" value="1">
                                                <span></span>
                                            </label>
                                        </span>
                                    </td>
                                    <td data-field="Name" class="m-datatable__cell">
                                        <span style="width: 110px;">@item.Title</span>
                                    </td>


                                    <td data-field="Deliverd" class="m-datatable__cell">
                                        <span style="width: 110px; text-align: CENTER">
                                            @Html.ActionLink("Deliverd", "AssignProjectAsDelivered", "MD", new { id = item.Id },
                                           new { @class = "btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill", @style="font-size:11px "})
                                        </span>
                                    </td>
                                    <td data-field="Currency" class="m-datatable__cell">
                                        <span style="width: 120px; text-align: CENTER">
                                            @Html.ActionLink("Set Schedule", "SetSchedule", "MD", new { id = item.Id },
                                           new { @class = "btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill", @style="font-size:11px"})
                                        </span>
                                    </td>

                                    <td data-field="ShipAddress" class="m-datatable__cell">
                                        <span style="width: 150px; text-align: CENTER">

                                            @Html.ActionLink("MT", "ListMT", "MD", new { id = item.Id },
                                           new { @class = "btn m-btn--pill    btn-danger", @style = "font-size:11px" })

                                            @Html.ActionLink("MTL", "ListMTL", "MD", new { id = item.Id },
                                          new { @class = "btn m-btn--pill btn-danger", @style = "font-size:11px" })

                                        </span>
                                    </td>
                                    <td data-field="Actions" class="m-datatable__cell">
                                        <span style="overflow: visible; position: relative; width: 215px;text-align: CENTER">


                                            @Html.ActionLink("Details", "PostDetails", "MD", new { id = item.Id },
                                           new { @class = "btn btn-accent m-btn m-btn--custom m-btn--icon m-btn--air m-btn--pill", @style="font-size:11px"})

                                            @Html.ActionLink("Leave Project", "LeaveProject", "MD", new { id = item.Id },
                                                 new { @class = "btn m-btn--pill    btn-danger", @style="font-size:11px"})


                                        </span>
                                    </td>
                                </tr>



                            </tbody>
                        }
                    </table>

                </div>

            </div>
        </div>
    </div>
</div>
